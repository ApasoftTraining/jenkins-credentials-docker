pipeline {
  agent any
  parameters {
     credentials credentialType: 'com.cloudbees.plugins.credentials.impl.UsernamePasswordCredentialsImpl', 
     defaultValue: '', 
     description: 'This is an example', 
     name: 'DOCKER', 
     required: true
   }
 
    //DOCKER  USU:PASS
    //DOCKER_USR   USER
    //DOCKER_PSW    PASSSWORD
  stages {
    stage('Docker Build') {
      steps {
        sh 'docker build -t apasoft/jenkins-web:latest .'
      }
    }
    stage('Docker Push') {
      steps {        
          sh "docker login -u ${params.DOCKER_USR} -p ${params.DOCKER_PSW}"
          sh 'docker push apasoft/jenkins-web:latest'
      }
    }
  }
}